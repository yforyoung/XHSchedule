<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/AppTheme.NoActionBar"
    android:background="@drawable/back"

    >

    <android.support.design.widget.TextInputEditText
        android:gravity="center"
        android:id="@+id/password_input"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="请输入密码"
        android:inputType="textPassword"
        android:layout_centerVertical="true"
        />

    <android.support.design.widget.TextInputEditText
        android:gravity="center"
        android:id="@+id/id_input"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_above="@id/password_input"
        android:hint="请输入学号"
        />


<android.support.design.widget.TextInputEditText
    android:layout_centerHorizontal="true"
    android:hint="验证码"
    android:id="@+id/yzm_input"
    android:gravity="center"
    android:layout_below="@id/password_input"
    android:layout_width="150dp"
    android:layout_height="50dp" />


    <ImageView
        android:id="@+id/yzm_pic"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_alignTop="@id/yzm_input"
        android:layout_toRightOf="@id/yzm_input"

        />
    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/xhulogo"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/id_input"
        android:layout_marginBottom="30dp"

        />

    <Button
        android:id="@+id/load_button"
        android:text="登        陆"
        android:textSize="20sp"
        android:textColor="#3f7874"
        android:background="@drawable/ic_load_button"
        android:layout_marginTop="20dp"
        android:layout_below="@id/yzm_pic"
        android:layout_width="match_parent"
        android:layout_height="40dp" />

</RelativeLayout>